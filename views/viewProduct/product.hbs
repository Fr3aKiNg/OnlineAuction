<section>
    <div class="container" style="margin-top: 2rem;">
        <div class="row">

            <div class="col-sm-12 padding-right">
                <div class="product-details">
                    <!--product-details-->
                    <div class="col-sm-5">
                        <div class="container-fluid">

                            <!-- Carousel container -->
                            <div id="my-pics" class="carousel slide" data-ride="carousel"
                                style="width: 110%;margin:auto;height: 34%;">


                                <!-- Content -->
                                <div class="carousel-inner" style="top: 3rem; right: 5rem;" role="listbox">

                                    <!-- Slide 1 -->
                                    <div class="item active">
                                        <img src="../../public/assets/imgs/sp/1/1.jpg" alt="Sunset over beach">
                                    </div>

                                    <!-- Slide 2 -->
                                    <div class="item">
                                        <img src="../../public/assets/imgs/sp/1/1.jpg" alt="Rob Roy Glacier">
                                    </div>

                                    <!-- Slide 3 -->
                                    <div class="item">
                                        <img src="../../public/assets/imgs/sp/1/1.jpg" alt="Longtail boats at Phi Phi">
                                    </div>

                                </div>

                                <!-- Previous/Next controls -->
                                <a class="left carousel-control" href="#my-pics" role="button" data-slide="prev">
                                    <span class="icon-prev" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#my-pics" role="button" data-slide="next">
                                    <span class="icon-next" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>

                            </div>
                        </div>

                    </div>

                    <div class="col-sm-7">
                        <div class="product-information">
                            <!--/product-information-->
                            <img src="images/product-details/new.jpg" class="newarrival" alt="" />
                            <div style="height: inherit;">
                                <h1 style="float: left;">{{product.name}}</h1>
                                <button type="button" class="btn btn-fefault cart" style="margin: 20px;">
                                    <a href="#" style="color: white;"><i class="fa fa-plus-square"
                                            style="margin-right: 9px; color: white;"></i>Add to
                                        watchlist</a>
                                </button>
                            </div>

                            <span>
                                <table class="table table-responsive" style="margin: 0;border:none">
                                    <tr>
                                        <td align="left">
                                            <span>${{product.offer_price}}</span>
                                        </td>
                                        <td align="right">
                                            <span></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>Price step: </p>
                                        </td>
                                        <td align="right">
                                            <p>${{product.price_step}}</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>Buy Now: </p>
                                        </td>
                                        <td align="right">
                                            <b>${{product.buy_now_price}}</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>Seller: <a href="#">{{product.seller_name}}</a>
                                            </p>
                                        </td>
                                        <td align="right">
                                            <p>Rating: {{product.rate_seller}}</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>Highest bidder: <a href="#">{{product.winner_name}}</a></p>
                                        </td>
                                        <td align="right">
                                            <p>Rating: {{product.rate_winner}}</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>Upload time: </p>
                                        </td>
                                        <td align="right">
                                            <p>{{product.posted_time}}</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left">
                                            <p>End time: </p>
                                        </td>
                                        <td align="right">
                                            <p>{{product.end_time}}</p>
                                        </td>
                                    </tr>
                                </table>

                            </span>
                            <div>
                                <button type="button" class="btn btn-success col-5">Buy now</button>
                            </div>
                            <div style="margin-top: 1rem;">
                                <button type="button" class="btn btn-warning col-5" style="margin-right: 1rem;">Bid
                                    now</button>
                                {{!-- Enter price: $ <input type="number" value="" /> --}}
                            </div>
                            <a href=""><img src="images/product-details/share.png" class="share img-responsive"
                                    alt="" /></a>
                        </div>
                        <!--/product-information-->
                    </div>
                </div>
                <!--/product-details-->

                <div class="category-tab shop-details-tab">
                    <!--category-tab-->
                    <div class="col-sm-12">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#details" data-toggle="tab">Details</a></li>
                            <li><a href="#companyprofile" data-toggle="tab">Bid history</a></li>
                            {{!-- <li><a href="#tag" data-toggle="tab">Tag</a></li>
                            <li class="active"><a href="#reviews" data-toggle="tab">Reviews (5)</a></li> --}}
                        </ul>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade active in" id="details">

                        </div>

                        <div class="tab-pane fade" id="companyprofile">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Bidder</th>
                                        <th>Offer Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each offer}}
                                    <tr>
                                        <td>{{_time}}</td>
                                        <td>{{username}}</td>
                                        <td>${{money}}</td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
                <!--/category-tab-->



            </div>
        </div>
    </div>
    <!-- Initialize Bootstrap functionality -->
    <script>
        // Initialize tooltip component
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })

        // Initialize popover component
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
</section>