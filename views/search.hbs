<section>
    <div class="container" style="margin-top: 2rem;">
        <div class="row">
            <div class="col-sm-3" style="top: 20px;">
                <div class="left-sidebar">
                    <h2>Category</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-products-->
                        {{#each lcCategories}}
                        <div class="panel panel-default">
                            {{#if CatHaveSub}}
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordian" href=#{{cat_name}}>
                                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                        {{cat_name}}
                                    </a>
                                </h4>
                            </div>
                            <div id={{cat_name}} class="panel-collapse collapse">
                                <div class="panel-body">
                                    <ul>
                                        {{#each subCats}}
                                        <li><a href="/search?catID={{cat_id}}">{{cat_name}}</a></li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                            {{else}}
                            <div class="panel-heading">
                                <h4 class="panel-title"><a href="#">{{cat_name}}</a></h4>
                            </div>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="../public/assets/home/shipping.jpg" alt="" />
                    </div>
                    <!--/shipping-->

                </div>
            </div>
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">Search for "{{searchName}}{{catName.cat_name}}"</h2>
                    {{#each searchItem}}
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class=" single-products">
                                <div class="productinfo text-center cursor-pointer"
                                    onclick="location.href='./product/{{product_id}}';">
                                    <img class="product-img" src="../public/assets/home/product1.jpg" alt="" />
                                    <h2>${{offer_price}}</h2>
                                    <p style="font-weight: bold; font-size: 1.75rem;">{{name}}</p>
                                    <table class="table table-responsive" style="margin: 0;border:none">
                                        <tr>
                                            <td align="center">
                                                <p><b>{{winner_username}}</b> bidded!</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="center">
                                                <p><b>{{count_offers}}</b> offers!</p>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="center">
                                                <p>End {{end_time}}</p>
                                            </td>
                                        </tr>
                                    </table>
                                    <a href="#" class="btn btn-warning add-to-cart"><i class="fas fa-rocket"></i>Bid
                                        now</a>
                                </div>
                                {{#if isNew}}
                                <img src="../public/assets/home/new.png" class="new" alt="" />
                                {{/if}}
                            </div>
                            <div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    <li><a href="#"><i class="fa fa-plus-square"></i>Add to watchlist</a></li>

                                </ul>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div style="
    margin: auto;
    width: fit-content;
">

                    <ul class="pagination  justify-content-center">
                        {{#each page_items}}
                        {{#if isActive}}
                        <li class="page-item active"><a class="page-link" href="">{{value}}</a></li>
                        {{else}}
                        <li class="page-item "><a class="page-link"
                                href="/search?page={{value}}&catID={{../catID}}&searchString={{../searchName}}">{{value}}</a>
                        </li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>